<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:orientation="vertical"
      android:background="@drawable/ic_kk"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <TextView
        android:textSize="20dp"
        android:textColor="#07adf4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:text="Các phần chức năng của App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <LinearLayout
          android:layout_marginLeft="15dp"
          android:background="@drawable/ic_mot"
          android:layout_marginTop="50dp"
          android:orientation="vertical"
          android:layout_width="340dp"
          android:layout_height="wrap_content">
      <TextView
          android:layout_marginLeft="5dp"
          android:layout_marginTop="10dp"
          android:textColor="#123"
          android:text="App sử dựng miễn phí, không có quảng cáo"
          android:layout_width="match_parent"
          android:layout_height="20dp" />
      <TextView
          android:layout_marginLeft="5dp"
          android:textColor="#123"
          android:text="Dễ sử dụng, ngắn gọn."
          android:layout_width="match_parent"
          android:layout_height="20dp" />
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="50dp">
          <TextView
              android:layout_marginLeft="10dp"
              android:layout_marginTop="20dp"
              android:textColor="#123"
              android:text="Chức năng tìm kiếm "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/one"
             android:layout_width="150dp"
            android:layout_height="40dp" />
      </LinearLayout>
      <LinearLayout
          android:layout_marginTop="10dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="50dp">
          <TextView
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              android:textColor="#123"
              android:text="Xem thời tiết "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_marginLeft="123dp"
              android:layout_marginTop="-40dp"
              android:src="@drawable/two"
              android:layout_width="150dp"
              android:layout_height="40dp" />
      </LinearLayout>
      <LinearLayout
          android:layout_marginTop="-10dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="50dp">
          <TextView
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"
              android:textColor="#123"
              android:text="Các ngày tiếp theo "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <ImageView
              android:layout_marginLeft="16dp"
              android:src="@drawable/three"
              android:layout_width="80dp"
              android:layout_height="wrap_content" />
      </LinearLayout>
          <TextView
              android:layout_marginTop="20dp"
              android:layout_marginLeft="260dp"
              android:id="@+id/bt"
              android:textColor="#07adf4"
              android:text="Quay Lại"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>

  </LinearLayout>
</RelativeLayout>