<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/ic_kk"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
          android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="600dp">
            <TextView
                android:textSize="20dp"
                android:textColor="#07adf4"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="90dp"
                android:text="Liên Hệ Với Chúng Tôi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="@drawable/ic_mot"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="110dp">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/adress"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="#123"
                    android:textSize="10dp"
                    android:text="Tổ 3, phường tân thịnh, thái nguyên "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

                 <LinearLayout

                     android:layout_marginLeft="85dp"
                     android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/call"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="#123"
                    android:textSize="10dp"
                    android:text=" 0364 670 009"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/mai"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textColor="#123"
                        android:textSize="10dp"
                        android:text="DuBaoThoiTiet@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="5dp"
                  android:layout_marginLeft="200dp"
                        android:id="@+id/bt"
                        android:textColor="#07adf4"
                        android:text="Quay Lại"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:background="#f8202020"
                android:layout_marginTop="235dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <ImageView
                    android:src="@drawable/fb"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/chin"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/yt"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:textColor="#fdfeff"
                    android:layout_marginLeft="90dp"
                    android:textSize="10dp"
                    android:text="Copyright 2019|Xây dựng app dự báo thời tiết"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>