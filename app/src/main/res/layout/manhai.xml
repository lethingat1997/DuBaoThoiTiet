<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/pring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="55dp"
        android:background="@drawable/ic_hai"
        android:layout_width="270dp"
        android:layout_height="390dp">
        <TextView
            android:textColor="#123"
            android:layout_marginLeft="90dp"
            android:text="Cài đặt đơn vị"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="60dp">
            <ImageView
                android:src="@drawable/troi_nang"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#123"
                android:layout_marginLeft="20dp"
                android:text="Nhiệt độ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_ba"
                android:layout_width="120dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#f7f99706"
                    android:layout_width="60dp"
                    android:layout_height="20dp">
                    <TextView
                        android:textSize="10dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#fafaf4"
                        android:layout_gravity="center"
                        android:text="°C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textSize="10dp"
                        android:layout_marginLeft="23dp"
                        android:textColor="#f7f99706"
                        android:text="°F"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="60dp">
            <ImageView
                android:src="@drawable/ma"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#123"
                android:layout_marginLeft="20dp"
                android:text="Thời gian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="-55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_ba"
                android:layout_width="120dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textSize="10dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#f7f99706"
                        android:text="12h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="22dp"
                    android:background="#f7f99706"
                    android:layout_width="60dp"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textSize="10dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#fafaf4"
                        android:text="24h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="60dp">
            <ImageView
                android:src="@drawable/rain"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#123"
                android:layout_marginLeft="20dp"
                android:text="Lượng mưa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="-70dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_ba"
                android:layout_width="120dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#f7f99706"
                    android:layout_width="60dp"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textSize="10dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#fafaf4"
                        android:text="mm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textSize="10dp"
                        android:layout_marginLeft="23dp"
                        android:textColor="#f7f99706"
                        android:text="in"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="60dp">
            <ImageView
                android:src="@drawable/dfgh"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#123"
                android:layout_marginLeft="20dp"
                android:text="Tốc độ gió"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="-67dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_ba"
                android:layout_width="140dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="4dp"
                        android:textColor="#f7f99706"
                        android:textSize="10dp"
                        android:text="km/h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/ic_khu"
                    android:layout_width="60dp"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_marginTop="4dp"
                        android:textSize="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#f7f99706"
                        android:text="miles/h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="#f7f99706"
                    android:layout_width="50dp"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textSize="10dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#fafaf4"
                        android:text="m/s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <Button
            android:background="@drawable/ic_cuoi"
            android:layout_marginTop="9dp"
            android:layout_gravity="center"
            android:text="Hoàn thành"
            android:id="@+id/cuoi"
            android:layout_width="160dp"
            android:layout_height="30dp" />








    </LinearLayout>

</RelativeLayout>