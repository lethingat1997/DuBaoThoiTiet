<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dsg"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:id="@+id/frame"
    tools:showIn="@layout/app_bar_main">
    <!--<FrameLayout-->
        <!--android:id="@+id/frame"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

    <!--</FrameLayout>-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/ic_nhb"
        android:id="@+id/mot"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="280dp"
        android:layout_height="28dp">
        <EditText
            android:textColor="#123"
            android:layout_marginLeft="10dp"
            android:textSize="8dp"
            android:hint="nhập tên thành phố"
            android:id="@+id/timkiem"
            android:layout_width="230dp"
            android:layout_height="30dp" />
        <ImageButton
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_search"
            android:id="@+id/seach"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hai"
        android:layout_marginTop="-10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#123"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:id="@+id/Tvtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#123"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:id="@+id/Tvqg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ba"
            android:background="@drawable/ic_mot"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="380dp"
            android:layout_height="140dp">
            <ImageView

                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/IManh"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-82dp"
                android:layout_marginRight="120dp"
                android:layout_gravity="center"
                android:textSize="26dp"
                android:textColor="#123"
                android:hint="Nhiệt Độ"
                android:id="@+id/Tvnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="110dp"
                android:textColor="#123"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:id="@+id/Tvtt"
                android:hint="Trạng Thái"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="100dp"
                android:textSize="14dp"
                android:textColor="#123"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="Ngày cập nhật"
                android:id="@+id/Tvncn"
                android:layout_width="150dp"
                android:layout_height="25dp" />
            <LinearLayout
                android:layout_marginTop="-55dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="185dp"
                android:layout_height="60dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="75dp">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:src="@drawable/doam"
                        android:layout_width="19dp"
                        android:layout_height="19dp" />
                    <TextView
                        android:textSize="15dp"
                        android:layout_marginTop="6dp"
                        android:textColor="#000003"
                        android:id="@+id/Tvdo_am"
                        android:text="độ ẩm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:src="@drawable/cloudy"
                        android:layout_width="19dp"
                        android:layout_height="19dp" />
                    <TextView
                        android:textSize="15dp"
                        android:layout_marginTop="6dp"
                        android:textColor="#000003"
                        android:id="@+id/Tvmay"
                        android:text="mây"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="75dp">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:src="@drawable/vb"
                        android:layout_width="19dp"
                        android:layout_height="19dp" />
                    <TextView
                        android:textSize="15dp"
                        android:layout_marginTop="6dp"
                        android:textColor="#01010a"
                        android:id="@+id/Tvgio"
                        android:text="gio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Các ngày tiếp theo"
        android:textColor="#123"
        android:textSize="15dp"
        android:id="@+id/Btngaytieptheo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:layout_gravity="center|bottom"
        android:id="@+id/Lvman2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>
    </LinearLayout>
</FrameLayout>